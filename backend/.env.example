# GenAI Sentinel Backend - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/genai_sentinel
DB_ECHO=False  # Set to True for SQL query logging in development

# JWT Configuration
# SECURITY WARNING: Generate a strong secret key in production!
# Use: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (adjust for your frontend URL)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5500

# Application Settings
APP_NAME=GenAI Sentinel
APP_VERSION=1.0.0
DEBUG=False

# Security Settings
BCRYPT_ROUNDS=12  # Higher = more secure but slower
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Rate Limiting (optional)
RATE_LIMIT_PER_MINUTE=60
